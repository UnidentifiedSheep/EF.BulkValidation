<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <IsPackable>true</IsPackable>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>

        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IsRoslynComponent>true</IsRoslynComponent>

        <RootNamespace>BulkValidation.SourceGeneration</RootNamespace>

        <PackageId>BulkValidation.SourceGeneration</PackageId>
        <Version>1.0.5</Version>
        <Authors>Diyar Tashliyan</Authors>
        <Description>BulkValidation.SourceGeneration project for Bulk Validation library.
            For full documentation, see the README on GitHub: https://github.com/UnidentifiedSheep/EF.BulkValidation
        </Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/UnidentifiedSheep/EF.BulkValidation</PackageProjectUrl>
        <RepositoryUrl>https://github.com/UnidentifiedSheep/EF.BulkValidation.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>EntityFrameworkCore;Validation;Bulk;EF;SourceGeneration</PackageTags>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <Title>EF Bulk Validation</Title>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.3.0" PrivateAssets="all"/>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.3.0" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup Condition="'$(IsPackable)' == 'true'">
        <PackageReference Include="BulkValidation.Core" Version="1.0.7" />
    </ItemGroup>
    <ItemGroup Condition="'$(IsPackable)' != 'true'">
        <ProjectReference Include="..\..\BulkValidation.Core\BulkValidation.Core.csproj" />
    </ItemGroup>

    <Target Name="AddAnalyzerToPackage" AfterTargets="Build">
        <ItemGroup>
            <None Include="$(OutputPath)$(AssemblyName).dll"
                  Pack="true"
                  PackagePath="analyzers/dotnet/cs" />
        </ItemGroup>
    </Target>

</Project>
